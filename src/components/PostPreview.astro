---
import { cn } from "../lib/utils";
import FormattedDate from "./FormattedDate.astro";
const { title, slug, heroImage, pubDate, excerpt } = Astro.props;
---

<li>
  <a href={`blog/${slug}`}>
    <div class="mb-5">
      <img
        src={heroImage}
        alt={`Cover Image for ${title}`}
        class="shadow-sm w-full h-96 object-cover hover:shadow-lg transition-shadow duration-200"
        width={1300}
        height={630}
        transition:name={slug}
      />
    </div>
    <h3 class="text-3xl mb-3 leading-snug hover:underline">
      {title}
    </h3>
    <div class="text-lg mb-4">
      <FormattedDate date={pubDate} />
    </div>
    <p class="text-lg leading-relaxed mb-4">{excerpt}</p>
  </a>
</li>
